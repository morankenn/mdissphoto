<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0
               http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">


   <!-- Begin UrlMappings -->

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/faces/public/index.jsf" />
	</url-mapping>
	
	 <url-mapping id="register">
		<pattern value="/register" />
		<view-id value="/faces/public/register.jsf" />
	</url-mapping>
	
	<url-mapping id="confirmation">
		<pattern value="/confirmation" />
		<view-id value="/faces/public/confirmation.jsf" />
	</url-mapping>	
	
	<url-mapping id="login">
		<pattern value="/login/" />
		<view-id value="/faces/public/login.jsf" />
		<action>#{loginBean.setLoginError}</action>
	</url-mapping>
	
	<url-mapping id="logout">
		<pattern value="/logout" />
		<view-id value="/j_spring_security_logout" />
	</url-mapping>
	
	<url-mapping id="admin">
		<pattern value="/admin/" />
		<view-id value="/faces/admin/admin-index.jsf" />
	</url-mapping>

	<url-mapping id="dashboard">
		<pattern value="/dashboard/" />
		<view-id value="/faces/app/user/dashboard.jsf" />
	</url-mapping>
	
	<url-mapping id="restricted_error">
		<pattern value="/user/error/" />
		<view-id value="/faces/error/user-error.jsf" />
	</url-mapping>
	
	<url-mapping id="user_profile">
		<pattern value="/user/#{user:paramsBean.userId}/" />
		<view-id value="/faces/app/user/user-profile.jsf" />
	</url-mapping>
	
	<url-mapping id="user_albums">
		<pattern value="/user/#{user:paramsBean.userId}/albums/" />
		<view-id value="/faces/app/user/album-list.jsf" />
	</url-mapping>

	<url-mapping id="user_album">
		<pattern value="/user/#{user:paramsBean.userId}/albums/#{album:paramsBean.albumId}/" />
		<view-id value="/faces/app/user/album-detail.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload">
		<pattern value="/user/#{user:paramsBean.userId}/upload/" />
		<view-id value="/faces/app/upload/upload-file.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_processing">
		<pattern value="/user/#{user:paramsBean.userId}/upload/processing/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/app/upload/process-upload.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_details">
		<pattern value="/user/#{user:paramsBean.userId}/upload/details/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/app/upload/detail-upload.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_error">
		<pattern value="/user/#{user:paramsBean.userId}/upload/error/" />
		<view-id value="/faces/error/upload-error.jsf" />
	</url-mapping>

	<url-mapping id="photo_detail">
		<pattern value="/user/#{user:paramsBean.userId}/photo/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/app/user/photo-detail.jsf" />
	</url-mapping>
	
	<url-mapping id="photo_size">
		<pattern value="/user/#{user:paramsBean.userId}/photo/#{photo:paramsBean.photoId}/#{size:paramsBean.size}/" />
		<view-id value="/faces/app/user/photo-size.jsf" />
	</url-mapping>

	<url-mapping id="tag_detail">
		<pattern value="/tag/#{tag:paramsBean.tag}/" />
		<view-id value="/faces/app/tag-detail.jsf" />
	</url-mapping>
	
	<url-mapping id="tag_list">
		<pattern value="/tags/" />
		<view-id value="/faces/app/tag-list.jsf" />
	</url-mapping>

</pretty-config>
