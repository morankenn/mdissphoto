<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0
               http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">


   <!-- Begin UrlMappings -->

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/faces/index.jsf" />
	</url-mapping>
	
	<url-mapping id="login">
		<pattern value="/login/" />
		<view-id value="/faces/auth/login.jsf" />
	</url-mapping>

	<url-mapping id="signup">
		<pattern value="/signup/" />
		<view-id value="/faces/auth/registration.jsf" />
	</url-mapping>

	<url-mapping id="dashboard">
		<pattern value="/dashboard/" />
		<view-id value="/faces/dashboard.jsf" />
	</url-mapping>
	
	<url-mapping id="user_profile">
		<pattern value="/user/#{user:paramsBean.userId}/" />
		<view-id value="/faces/users/profile.jsf" />
	</url-mapping>
	
	<url-mapping id="user_albums">
		<pattern value="/user/#{user:paramsBean.userId}/albums/" />
		<view-id value="/faces/users/albums_list.jsf" />
	</url-mapping>

	<url-mapping id="user_album">
		<pattern value="/user/#{user:paramsBean.userId}/albums/#{album:paramsBean.albumId}/" />
		<view-id value="/faces/users/album.jsf" />
	</url-mapping>
	
	<url-mapping id="user_public">
		<pattern value="/user/#{user:paramsBean.userId}/public/" />
		<view-id value="/faces/users/public.jsf" />
	</url-mapping>S
	
	<url-mapping id="user_upload">
		<pattern value="/user/#{user:paramsBean.userId}/upload/" />
		<view-id value="/faces/upload/upload.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_processing">
		<pattern value="/user/#{user:paramsBean.userId}/upload/processing/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/upload/upload_processing.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_details">
		<pattern value="/user/#{user:paramsBean.userId}/upload/details/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/upload/upload_details.jsf" />
	</url-mapping>
	
	<url-mapping id="user_upload_error">
		<pattern value="/user/#{user:paramsBean.userId}/upload/error/" />
		<view-id value="/faces/upload/upload_error.jsf" />
	</url-mapping>

	<url-mapping id="photo_detail">
		<pattern value="/user/#{user:paramsBean.userId}/photos/#{photo:paramsBean.photoId}/" />
		<view-id value="/faces/photos/photo.jsf" />
	</url-mapping>
	
	<url-mapping id="user_cameras">
		<pattern value="/user/#{user:paramsBean.userId}/cameras/" />
		<view-id value="/faces/users/cameras.jsf" />
	</url-mapping>

	<url-mapping id="user_friends">
		<pattern value="/user/#{user:paramsBean.userId}/friends/" />
		<view-id value="/faces/users/friends.jsf" />
	</url-mapping>
	
	<url-mapping id="cameras">
		<pattern value="/cameras/" />
		<view-id value="/faces/cameras/cameras_list.jsf" />
	</url-mapping>

	<url-mapping id="camera_detail">
		<pattern value="/cameras/#{camera:paramsBean.cameraId}/" />
		<view-id value="/faces/cameras/camera.jsf" />
	</url-mapping>

	<url-mapping id="camera_detail">
		<pattern value="/cameras/#{camera:paramsBean.cameraId}/" />
		<view-id value="/faces/cameras/camera.jsf" />
	</url-mapping>
	
	<url-mapping id="top">
		<pattern value="/top/#{time:paramsBean.time}/" />
		<view-id value="/faces/top.jsf" />
	</url-mapping>

</pretty-config>
